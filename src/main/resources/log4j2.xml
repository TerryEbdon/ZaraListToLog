<Configuration status="WARN">
  <Properties>
    <Property name="logPath">$${env:LOCALAPPDATA}/ebdon.net/ZaraListToLog/logs</Property>
    <Property name="logLevel">info</Property>
    <Property name="filePattern">ZaraListToLog-trace-%d{yyyy-MM-dd}.log</Property>
    <Property name="ZaraListToLogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %c{1} %msg%n</Property>
    <Property name="consolePattern">%msg%n</Property>
  </Properties>
  <Appenders>
    <Console name="consoleLog" target="SYSTEM_OUT">
      <PatternLayout pattern="${consolePattern}"/>
    </Console>
    <RollingFile name="traceLog" fileName="${logPath}/ZaraListToLog-trace.log"
      filePattern="${logPath}/${filePattern}">
      <PatternLayout>
        <pattern>${ZaraListToLogPattern}</pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>
    <RollingFile name="errorLog" fileName="${logPath}/ZaraListToLog-error.log"
                 filePattern="${logPath}/ZaraListToLog-error-%d{yyyy-MM-dd}.log">
      <PatternLayout>
        <pattern>${ZaraListToLogPattern}</pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger name="net.ebdon.zaralisttolog" level="${logLevel}" additivity="false">
      <appender-ref ref="traceLog"   level="${logLevel}"/>
      <appender-ref ref="errorLog"   level="error"/>
      <appender-ref ref="consoleLog" level="info"/>
    </Logger>
    <Root level="error" additivity="false">
      <AppenderRef ref="consoleLog"/>
    </Root>
  </Loggers>
</Configuration>
